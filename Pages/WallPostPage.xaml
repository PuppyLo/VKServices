<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.WallPostPage"
             Title="WallPostPage">
    <VerticalStackLayout>

        <Label
            x:Name="SelectFolder_lbl"
            Text="Select Folder"
            FontSize="15"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            />

        <Entry 
            x:Name="WallPostOwnerID_txt"
            Text="Введите ID группы"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry 
            x:Name="WallPostDay_txt"
            Text="На сколько дней отложить запись?"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry 
            x:Name="WallPostHours_txt"
            Text="На сколько часов отложить запись?"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            FontSize="15"
            Text="WallPost"
            MaximumHeightRequest="35"
            Clicked="WallPostBtn_Clicked"
            />

    </VerticalStackLayout>
</ContentPage>